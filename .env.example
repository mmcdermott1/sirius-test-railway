# ===========================================
# Environment Variables for Sirius Application
# ===========================================
# Copy this file to .env and fill in the values
# For Flight Control: Add these as secrets in the Flight Control dashboard

# ===========================================
# REQUIRED - Core Configuration
# ===========================================

# Database connection string
# Replit: Automatically set via DATABASE_URL
# AWS/Flight Control: Provided by Flight Control RDS service
DATABASE_URL=postgresql://user:password@host:5432/database

# Session secret for Express sessions (min 32 characters)
SESSION_SECRET=your-secure-session-secret-min-32-chars

# Node environment
NODE_ENV=production

# Server port (Flight Control uses 8080, Replit uses 5000)
PORT=8080

# ===========================================
# AUTHENTICATION CONFIGURATION
# ===========================================

# Auth provider: 'replit' for development, 'cognito' or 'oidc' for production
AUTH_PROVIDER=replit

# For Replit Auth (development)
REPL_ID=your-repl-id
ISSUER_URL=https://replit.com/oidc

# For AWS Cognito (production alternative)
# COGNITO_USER_POOL_ID=us-east-1_xxxxx
# COGNITO_CLIENT_ID=your-client-id
# COGNITO_CLIENT_SECRET=your-client-secret
# COGNITO_DOMAIN=your-domain.auth.us-east-1.amazoncognito.com
# COGNITO_CALLBACK_URL=https://your-app.com/api/callback

# Cookie security (set to 'false' for staging/HTTP testing, default is secure for production)
# COOKIE_SECURE=true

# For Generic OIDC Provider (production alternative)
# OIDC_ISSUER_URL=https://your-provider.com
# OIDC_CLIENT_ID=your-client-id
# OIDC_CLIENT_SECRET=your-client-secret
# OIDC_CALLBACK_URL=https://your-app.com/api/callback

# ===========================================
# OPTIONAL - Third-Party Services
# ===========================================

# Stripe (Payment Processing)
# STRIPE_SECRET_KEY=sk_live_xxxxx
# STRIPE_PUBLISHABLE_KEY=pk_live_xxxxx
# STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Twilio (SMS)
# TWILIO_ACCOUNT_SID=ACxxxxx
# TWILIO_AUTH_TOKEN=your-auth-token
# TWILIO_PHONE_NUMBER=+1234567890

# SendGrid (Email)
# SENDGRID_API_KEY=SG.xxxxx
# SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# AWS S3 (Object Storage)
# AWS_ACCESS_KEY_ID=AKIAxxxxx
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=your-bucket-name

# Google Cloud Storage (Alternative Object Storage)
# GCS_BUCKET_NAME=your-bucket-name
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# Google Maps (Address Validation)
# GOOGLE_MAPS_API_KEY=your-api-key

# ===========================================
# OPTIONAL - Feature Flags
# ===========================================

# Run database migrations on startup (useful for first deployment)
# RUN_MIGRATIONS_ON_BOOT=true

# Enable debug logging
# DEBUG=true
